{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "ebook-wordwise",
    "version": "0.1.8"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "path": {
        "all": true
      },
      "dialog": {
        "all": false,
        "ask": false,
        "confirm": false,
        "message": false,
        "open": true,
        "save": false
      },
      "shell": {
        "all": false,
        "open": true
      },
      "os": {
        "all": true
      }
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://shenhe.org/ebook-wordwise/{{target}}/{{current_version}}",
        "https://gist.githubusercontent.com/xiaochun-z/05326c594c34756ef479b99aeb2bba77/raw/ebook-wordwise.json",
        "https://gist.githubusercontent.com/xiaochun-z/05326c594c34756ef479b99aeb2bba77/raw/"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDk3REE3MDI0MzExQUQ4RDcKUldUWDJCb3hKSERhbDZjeVpzdXNnWklZbU9xSjFaSmdOcnIreElvQm91dFZwbmpWY25WUGN4K0oK",
      "windows": {
        "installMode": "passive",
        "installerArgs": []
      }
    },
    "windows": [
      {
        "fullscreen": false,
        "width": 800,
        "height": 620,
        "resizable": false,
        "maximizable": false,
        "title": "ebook wordwise"
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.tauri.org.shenhe",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": [
        "resources/"
      ]
    }
  }
}